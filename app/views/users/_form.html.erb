<% if @user.errors.any? %>
<h2> los siguientes errores provocaron que no se creara el articulo </h2>
<ul>
<% @user.errors.full_messages.each do |msg| %>
<li> <%= msg %></li>
<% end %>
</ul>
<% end %>
<%= form_for @user do |f| %>
    <p>
        
        <%= f.label :username %> <br/>
        <%= f.text_field :username %>
        
    </p>
    <p>
        <%= f.label :email %><br/>
        <%= f.email_field :email %>
    </p>
     <p>
        <%= f.label :password %><br/>
        <%= f.password_field :password %>
    </p>
    <p>
        <%= f.submit(@user.new_record? ?  "SIGN UP" : "Update")%>
    </p>

<% end %>
<%= link_to "Back to article Listing", articles_path %>