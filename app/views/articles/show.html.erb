<h1 align= "center">Showing selected article</h1>
<div align= "center">
<p>
   <h2 align = "center">Title: <%= @article.title %></h2>
</p>
<% if @article.user %>
<ul class="listing">
    <div class= "row center">
        <div class = "col-md-4 col-md-offset-4">
            <li>Created by:</li>
            <li><%= link_to gravatar_for(@article.user),user_path(@article.user)%></li>
            <li class = "article-title">
                <%= link_to @article.user.username, user_path(@article.user)%>
            </li>
            <li><small><%= pluralize(@article.user.articles.count, "article") if @article.user.articles %></small></li>
        </div>
    </div>
    
</ul>
<% end %>
<p>
    Description: <%= @article.description %>
</p>
<% if @article.categories.any? %>
    <p>Categories: <%= render @article.categories %>
        
    </p>
<% end %>
<% if logged_in? && (current_user == @article.user || current_user.admin?) %> 
<%= link_to "Edit this article", edit_article_path(@article) %> |
<%= link_to "delete this article", article_path(@article), method: :delete , data:{confirm: "Are you sure?"} %> |
<% end %>
<%= link_to "Back to article listing", articles_path %>
</div>