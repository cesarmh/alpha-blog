
<% if logged_in?  && current_user== @user %>
    <div align="right"><%= link_to 'Log out', logout_path, method: :delete %></div>
    
     <h4 align= "center" ><%= "#{@user.username} profile"%> <%= " you are an admin" if current_user.admin? %></h4>
    <%= link_to "Edit your profile", edit_user_path(current_user) %>
    <%= link_to "View your profile",user_path(current_user) %>
     <%= link_to "create a new article", new_article_path %>
 
<% elsif !logged_in? %>
     <%= link_to 'Log in', login_path %>
    
      <%= link_to 'sig nup', signup_path %>
<% else %>
    <div align="right"><%= link_to 'Log out', logout_path, method: :delete %></div>
 <% end %>

<table>
    <tr>
        <th>Title</th>
        <th>Description</th>
    </tr>
    <% obj.each do |article| %>
    <tr>
        <td><%= article.title %></td>
        <td><%= article.description %></td>
        <td><%= link_to 'Show', article_path(article)%> </td>
        <% if logged_in? && (current_user == article.user || current_user.admin?) %>
            <td><%= link_to 'Edit', edit_article_path(article) %> </td>
            <td><%= link_to'Delete', article_path(article), method: :delete, data:{confirm: "Are you sure?"}%></td>
        <% end %>
        <td><small>Created by: <%= article.user.username if article.user%>, <%= time_ago_in_words(article.created_at)%> ago , 
        last updated <%= time_ago_in_words(article.updated_at)%> ago </small></td>
       
    </tr>
    <%end%>
</table>

