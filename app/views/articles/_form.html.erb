<% if @article.errors.any? %>
<h2> los siguientes errores provocaron que no se creara el articulo </h2>
<ul>
<% @article.errors.full_messages.each do |msg| %>
<li> <%= msg %></li>
<% end %>
</ul>
<% end %>

<% if logged_in? %>
    <div align="right"><%= link_to 'Log out', logout_path, method: :delete %></div>
   
    <%= link_to "Edit your profile", edit_user_path(current_user) %>
    <%= link_to "View your profile",user_path(current_user) %>
 
<% else %>
     <%= link_to 'Log in', login_path %>
    
      <%= link_to 'sig nup', signup_path %>
 <% end %>   
 <li class="dropdown">

		<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Categories <span class="caret"></span></a>
		
		<ul class="dropdown">
		
		<li><%= link_to "All Categories", categories_path %></li>
		
		<% Category.all.each do |category| %>
		
		<li><%= link_to "#{category.name}", category_path(category) %></li>
		
		<% end %>
		
		<% if logged_in? and current_user.admin? %>
		
		<li role="separator" class="divider"></li>
		
		<li><%= link_to "Create New Category", new_category_path %></li>
		
		<% end %>
		
		</ul>

	</li>
 
<%= form_for @article do |f| %>
    <p>
        
        <%= f.label :tittle %> <br/>
        <%= f.text_field :title %>
        
    </p>
    <p>
        <%= f.label :description %><br/>
        <%= f.text_area :description %>
    </p>
    <p>
        <div class= "row">
            <div class = "col-sm-offset-2 col-sm-10">
                 <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb|%>
                 <% cb.label(class: "checkbox-inline input_check") {cb.check_box(class: "checkbox") + cb.text} %>
                 <% end %>
            </div>
        </div>
       
    </p>
    <p>
        <%= f.submit %>
    </p>

<% end %>
<%= link_to "Back to article Listing", articles_path %>