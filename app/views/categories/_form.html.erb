
<%= render 'shared/errors', obj: @category %>


<div class= "row">
    <div class="col-xd-12">
        <%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %>
        <div class = "form-group">
            <div class="control-label col-sm-2">
        
                
                <%= f.label :name %>
             </div>
            <div class="col-sm-8">

                    <%= f.text_field :name, class: "form-control", placeholder: "name of category", autofocus: true %>

            </div>
        </div>
        
           <div class="form-group">

                <div class="col-sm-offset-2 col-sm-10">
                
                <%= f.submit class: 'btn btn-primary btn-lg' %>
                
                </div>

            </div>
        
        <% end %>
        <div class="col-xs-4 col-xs-offset-4">
            [ <%= link_to "Cancel request and return to article Listing", articles_path %> ]
        </div>
       
    </div>
</div>