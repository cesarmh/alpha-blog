<% if @category.errors.any? %>
<h2> los siguientes errores provocaron que no se creara el articulo </h2>
<ul>
<% @category.errors.full_messages.each do |msg| %>
<li> <%= msg %></li>
<% end %>
</ul>
<% end %>
<%= form_for @category do |f| %>
    <p>
        
        <%= f.label :name %> <br/>
        <%= f.text_field :name %>
    <p>
        <%= f.submit %>
    </p>

<% end %>
<%= link_to "Back to article Listing", articles_path %>